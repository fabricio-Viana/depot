<fieldset data-payment-target="additionalFields" data-type="Cartão de Credito">
  <div class="my-5">
    <%= form.label :credit_card_number, "Número do cartão de crédito"  %>
    <%= form.password_field :credit_card_number, class: "input-field" %>
  </div>

  <div class="my-5">
    <%= form.label :expiration_date, "Data de validade" %>
    <%= form.text_field :expiration_date, class: "input-field",
      size:9, placeholder: "e.g. 03/22" %>
  </div>
</fieldset>
